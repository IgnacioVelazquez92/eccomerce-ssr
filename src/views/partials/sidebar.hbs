{{!-- views/partials/sidebar.hbs --}}

{{!-- Offcanvas en mobile --}}
<div class="offcanvas offcanvas-start d-lg-none" tabindex="-1" id="offcanvasSidebar"
    aria-labelledby="offcanvasSidebarLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasSidebarLabel">Filtros</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
    </div>
    <div class="offcanvas-body">
        {{!-- Filtros (mismo formulario que desktop) --}}
        <form method="get" action="/" class="card">
            <div class="card-header fw-semibold">Catálogo</div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Buscar</label>
                    <input type="text" name="q" value="{{q}}" class="form-control" placeholder="Título o SKU">
                </div>

                <div class="row g-2">
                    <div class="col-6">
                        <label class="form-label">Precio mín.</label>
                        <input type="number" step="0.01" name="min" value="{{min}}" class="form-control">
                    </div>
                    <div class="col-6">
                        <label class="form-label">Precio máx.</label>
                        <input type="number" step="0.01" name="max" value="{{max}}" class="form-control">
                    </div>
                </div>

                <div class="form-check my-3">
                    <input class="form-check-input" type="checkbox" value="true" id="featured_m" name="featured" {{#if
                        featured}}checked{{/if}}>
                    <label class="form-check-label" for="featured_m">Solo destacados</label>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ordenar por</label>
                    <select class="form-select" name="sort">
                        <option value="newest" {{#if (eq sortKey "newest" )}}selected{{/if}}>Más nuevos</option>
                        <option value="price_asc" {{#if (eq sortKey "price_asc" )}}selected{{/if}}>Precio: menor a mayor
                        </option>
                        <option value="price_desc" {{#if (eq sortKey "price_desc" )}}selected{{/if}}>Precio: mayor a
                            menor</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Categoría</label>
                    <select class="form-select" name="cat">
                        <option value="">Todas</option>
                        {{#each categories}}
                        <option value="{{slug}}" {{#if (eq ../cat slug)}}selected{{/if}}>{{name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="card-footer d-grid gap-2">
                <button class="btn btn-primary" type="submit">Aplicar</button>
                <a class="btn btn-outline-secondary" href="/">Limpiar</a>
            </div>
        </form>
    </div>
</div>

